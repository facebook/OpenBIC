&fmc {
	status = "okay";
};

&fmc_cs0 {
	status = "okay";
	spi-max-buswidth = <4>;
	spi-max-frequency = <50000000>;

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;
		boot_partition: partition@0 {
			label = "image-0";
			reg = <0x0 0x100000>;
		};
		dfu_partition: partition@1 {
			label = "image-1";
			reg = <0x0 0x100000>;
		};
	};
};

&uart1 {
	status = "okay";
	modbus0 {
		compatible = "zephyr,modbus-serial";
		label = "MODBUS0";
		status = "okay";
	};
};

&uart2 {
	status = "okay";
	modbus1 {
		compatible = "zephyr,modbus-serial";
		label = "MODBUS1";
		status = "okay";
	};
};

&uart3 {
	status = "okay";
	modbus2 {
		compatible = "zephyr,modbus-serial";
		label = "MODBUS2";
		status = "okay";
	};
};

&uart5 {
	current-speed = <57600>;
};

&wdt0 {
	status = "okay";
};

&wdt1 {
	status = "okay";
};

&wdt2 {
	status = "okay";
};

&wdt3 {
	status = "okay";
};

&sram0 {
	reg = <0 DT_SIZE_K(608)>, <0x98000 DT_SIZE_K(160)>;
};

&udc {
	status = "okay";
};

&pwm {
	status = "okay";
	pinctrl-0 = <&pinctrl_pwm0_default>;
};

&tach {
	status = "okay";
	pinctrl-0 = <&pinctrl_tach0_default &pinctrl_tach1_default>;

	fan@0 {
		reg = <0>;
		pulse-pr = <2>;
		min-rpm = <1000>;
		tach-div = <5>;
		label = "FAN0";
	};

	fan@1 {
		reg = <1>;
		pulse-pr = <2>;
		min-rpm = <1000>;
		tach-div = <5>;
		label = "FAN1";
	};
};

&gpio0_e_h {
	aspeed,persist-maps = <0x00840000>;
};

&gpio0_m_p {
	aspeed,persist-maps = <0x00100000>;
};

&gpio0_q_t {
	aspeed,persist-maps = <0x00000001>;
};
